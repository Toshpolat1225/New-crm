<section class="content">
    <div class="card card-solid ">
        <div class="card-body pb-0">
            {{#if tomorrow.length}}
            <div class="row">
                {{#each tomorrow}}
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7" style="margin-top: 10px;">
                                    <h2 class="lead"><b>{{name}}</b></h2>
                                    <p class="text-muted text-sm">{{comment}}</p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><a href="tel:{{num1}}"><span class="fa-li"><i
                                                        class="fas fa-lg fa-phone"></i></span>{{num1}}</a></li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="https://www.radiantexpressionsdental.com/wp-content/uploads/2017/11/avatar-client-customer-account-male-man-person-user-profile-icon-512.png"
                                        alt="user-avatar" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="/lids/{{id}}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> More Information
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <h4 style="margin-top: 30px;">Lids is empty</h4>
            {{/if}}
        </div>
    </div>
</section>