<div class="cardCategory" style="position: relative;:">
<ul class="navbar-nav ml-auto" style="position: absolute; right: 2px; font-size: 25px; z-index: 1;">
  {{#if isadmin}}
  <li class="nav-item">
    <a class="nav-link" href="/lids/lidCategory/add">
      <i style="color: #646464;"  class="fas fa-plus"></i>
    </a>
  </li>
  {{/if}}
</ul>

{{#if lids.length}}
<div class="row">
  {{#each lids}}
  <div class="col-12" style="margin: 1px;"> {{!-- col-md-3 col-6 --}}
    <div class="card " style=" width: 92%;">
      <div class="card-body d-flex justify-content-between worker_each">
        <h5 class="card-title lidCategoryedit"><a style="color: #646464;"  href="/lids/lidCategory/{{id}}">{{name}}</a></h5>
        <div style=" width: 16%;" class="d-flex justify-content-between">
          <a href="/lids/editCategory/{{id}}"><i style=" font-size: 19px; display: inline-flex; align-items: center;" class="fal fa-edit lidCategoryedit"></i></a>
          <a href="/lids/deleteCategory/{{id}}"><i style="font-size: 24px; margin-left: 8px; margin-top: 3px;" class="fal fa-times lidCategoryedit"></i></a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h2>lidCategory is empty</h2>
{{/if}}
</div>