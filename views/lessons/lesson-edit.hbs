<div class="row justify-content-center">
  <div class="col-md-6 justify-content-start align-items-center">
    <div class="card card-primary1">
      <form
        action="/lesson/edit/{{lesson.id}}"
        method="POST"
      >
        <div class="card-header addlesson">
          <h3 class="card-title">Lesson</h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label class="library-title choose" for="name">Lesson name</label>
            <input
              type="text"
              class="form-control inp1"
              id="name"
              name="name"
              value="{{lesson.name}}"
              required
            />
          </div>
          <div class="form-group">
            <label for="url">Lesson video URL</label>
            <input
              type="text"
              class="form-control inp1"
              id="url"
              name="url"
              value="{{lesson.url}}"
              required
            />
          </div>
        </div>
        <div class="card-footer submit">
          <input type="hidden" name="libraryId" value="{{lesson.libraryId}}" />
          <button type="submit" class="buttonSubmit">Edit</button>
        </div>
      </form>
    </div>
  </div>
</div>