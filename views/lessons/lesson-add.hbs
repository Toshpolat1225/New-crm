<div class="row justify-content-center">
  <div class="col-md-6 justify-content-center align-items-center mt-4">
    <div class="card card-primary">
      <form action="/lesson/add" method="POST" enctype="multipart/form-data">
        <div class="card-header">
          <h3 class="card-title">Add lesson</h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label for="name">Choose Library</label>
            <input
              type="text"
              class="form-control"
              id="name"
              placeholder="Library name"
              name="name"
              required
            />
          </div>
          <div class="form-group">
            <label for="img">Library img</label>
            <div class="input-group">
              <div class="custom-file">
                <input
                  type="file"
                  class="custom-file-input"
                  id="img"
                  name="img"
                  required
                />
                <label class="custom-file-label" for="img">Choose file</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="url">Creat url</label>
            <input
              type="text"
              class="form-control"
              id="url"
              placeholder="Write url video"
              name="url"
              required
            />
          </div>
          <div class="form-group">
            <label>Categoriya product</label>
            <select name="libraryId" class="form-control">
              {{#each categories}}
                <option value="{{id}}">{{name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-success">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>