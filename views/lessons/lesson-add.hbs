<div class="row justify-content-center">
  <div class="col-md-6 justify-content-start align-items-center mt-4">
    <div class="card card-primary1">
      <form action="/lesson/add" method="POST">
        <div class="card-header addlesson">
          <h3 class="card-title ">Add lesson</h3>
        </div>
        <div class="card-body mainpage">
          <div class="form-group">
            <label class="library-title choose" for="name">Choose Library</label>
            <input
              type="text"
              class="form-control inp1"
              id="name"
              placeholder="Library name"
              name="name"
              required
            />
          </div>

          <div class="form-group">
            <label class="library-title choose"  for="url">Creat url</label>
            <input
              type="text"
              class="form-control inp1"
              id="url"
              placeholder="Write url video"
              name="url"
              required
            />
          </div>
          <div class="form-group">
            <label class="library-title choose" >Categoriya product</label>
            <select name="libraryId" class="form-control inp1">
              {{#each categories}}
                <option value="{{id}}">{{name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="card-footer submit">
          <button type="submit" class="buttonSubmit">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
