<div class="salary-card d-flex justify-content-center">
    <div class="row justify-content-center mt-5">
    
        <div class="col-8">
            <div class="salary-card-title">
                <h3>Salary Edit page</h3>
                </div>
         <div class="salary-card-secendary">
             <form action="/salary/edit" method="POST">
           
            <div class="card-body">
                  <div class="form-group card-formGroup">
                         <label for="inputProjectLeader ">Worker</label>
                        <select id="inputProjectLeader" class="form-control custom-select" name="userId" required>
                         {{#each workers}}
                         <option value="{{id}}" {{#sel @root.salary.userId id}}     {{/sel}}>{{fullname}}</option>
                          {{/each}}
                         </select>
                     </div>
                <div class="form-group card-formGroup">
                    <label for="price" class="salary-label"> Salary price</label>
                    <input type="number" class="form-control" id="price" name="price" required
                        value="{{salary.price}}" />
                </div>
                <div class="form-group card-formGroup">
                    <label for="dateOld" class="salary-label">old date</label>
                    <input type="date" class="form-control" id="dateOld" name="dateOld" required
                        value="{{salary.dateOld}}" />
                </div>
                <div class="form-group card-formGroup">
                    <label for="date" class="salary-label">date</label>
                    <input type="date" class="form-control" id="date" name="date" required value="{{salary.date}}" />
                </div>
                <div class="form-group card-formGroup">
                    <div class="card-footer">
                <input type="hidden" name="_csrf" value="{{csrf}}" id="csrf" />
                <input type="hidden" value="{{salary._id}}" name="id">
                <button type="submit" class="btn btn-primary salary-button">Update</button>
            </div>
                </div>

            </div>
          
            
        </form>
         </div>
        
    </div>
    
    
    
</div>
</div>
