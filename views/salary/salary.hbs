{{#if salary.length}}
<div class="row justify-content-center align-content-center">
    <div class="col-12 table-responsive salary-table">
        <table class="table table-striped text-center align-content-center justify-content-between salary-Tmargin">
            <thead>
                <tr>
                    <th class="text-center pl-4 tr_num" style="width: 5%;">â„–</th>
                    <th class="tr_num" style="width: 20%;">Name</th>
                    <th class="tr_num" style="width: 15%;">Last wage</th>
                    <th class="tr_num" style="width: 15%;">Current wage</th>
                    <th class="tr_num" style="width: 15%;">Salary</th>
                    {{#iftr isadmin ismanager}}
                    <th class="tr_num" style="width: 20%;">Edit</th>
                    {{/iftr}}
                </tr>
            </thead>
            <tbody>
                {{#each salary}}
                <tr class="salary-transparent">

                    <td>
                        <ul class="d-flex justify-content-center">
                            <span class="numbers"></span>
                        </ul>
                    </td>

                    <td>
                        <p class="name salary-text">{{name}}</p>
                    </td>
                    <td>
                        <p class="data_old salary-text">{{dateOld}}</p>
                    </td>
                    <td>
                        <p class="data_new salary-text">{{date}}</p>
                    </td>
                    <td>
                        <p class="price salary-text">{{price}}</p>
                    </td>
                    {{#iftr @root.isadmin @root.ismanager}}
                    <td class="d-flex justify-content-center">
                        <div class="row justify-content-between">
                            <a class="btn btn-primary btnEdit salary-btn" href="/salary/{{id}}/edit?allow=true"><i
                                    class="fal fa-pencil-alt"></i></a>
                            <form style="width: auto;" action="/salary/remove" method="POST">
                                <input type="hidden" name="_csrf" value="{{csrf}}" id="csrf" />
                                <input type="hidden" value="{{id}}" name="id" id="id" />
                                <button class="btn btn-danger btnEdit ml-3 salary-btn"><i class="fal fa-trash-alt "></i></button>

                            </form>
                    </td>
                    {{/iftr}}
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <!-- /.col -->
</div>
{{else}}
<p>here is empty !</p>
{{/if}}
<!-- /.row -->