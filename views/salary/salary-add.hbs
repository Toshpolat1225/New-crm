<div class="salary-card d-flex justify-content-center">
  <div class="row justify-content-center mt-5">
    <div class="col-8">
      <div class="salary-card-title">
        <h3>Add new Salary</h3>
      </div>
      <div class="salary-card-secendary">
        <form action="/salary/worker/add" method="POST">
          <div class="card-body">
            <div class="form-group card-formGroup">
              <label for="inputProjectLeader ">Worker</label>
              <select
                id="inputProjectLeader"
                class="form-control custom-select"
                name="userId"
                required
              >
                {{#each workers}}
                  <option value="{{id}}">{{fullname}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group card-formGroup">
              <label for="price" class="salary-label">Salary price</label>
              <input
                type="number"
                class="form-control"
                id="price"
                name="price"
                required
              />
            </div>
            <div class="form-group card-formGroup">
              <label for="dateOld" class="salary-label">old date</label>
              <input
                type="date"
                class="form-control"
                id="dateOld"
                name="dateOld"
                required
              />
            </div>
            <div class="form-group card-formGroup">
              <label for="date" class="salary-label">date</label>
              <input
                type="date"
                class="form-control"
                id="date"
                name="date"
                required
              />
            </div>
            <div class="form-group card-formGroup">
              <div class="card-footer">
                <input type="hidden" name="_csrf" value="{{csrf}}" id="csrf" />
                <button
                  type="submit"
                  style="box-shadow: 0 0px 15px #ccc;padding: 8px 25px;"
                  class="btn btn-primary salary-button"
                >Create</button>
              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>

</div>