<div class="row justify-content-center">
  <div class="col-md-6 justify-content-start align-items-center mt-5">
    <!-- general form elements -->
    <div class="card card-primary1">
      <!-- /.card-header -->
      <!-- form start -->
      <form
        action="/library/add"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="card-header addlesson">
          <h3 class="card-title ">Add library</h3>
        </div>
        <div class="card-body">
          <div class="form-group">
            <label class="library-title choose" for="name">Library</label>
            <input
              type="text"
              class="form-control inp1"
              id="name"
              placeholder="Library name"
              name="name"
              required
            />
          </div>
          <div class="form-group">
            <label class="library-title choose" for="img">Library img</label>
            <div class="input-group">
              <div class="custom-file ">
                <input
                  type="file"
                  class="custom-file-input "
                  id="img"
                  name="img"
                />
                <label class="custom-file-label inp1" for="img">Choose file</label>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer submit">
          <button type="submit" class="buttonSubmit">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>