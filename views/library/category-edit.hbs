<div class="row justify-content-center">
  <div class="col-md-6 justify-content-center align-items-center mt-4">
    <!-- general form elements -->
    <div class="card card-primary">
      <!-- /.card-header -->
      <!-- form start -->
      <form
        action="/library/edit/{{category.id}}"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="card-body">
          <div class="form-group">
            <label for="name">Library</label>
            <input
              type="text"
              class="form-control"
              id="name"
              placeholder="Library name"
              name="name"
              value="{{category.name}}"
              required
            />
          </div>
          <div class="form-group">
            <label for="img">Library img</label>
            <div class="input-group">
              <div class="custom-file">
                <input
                  type="file"
                  class="custom-file-input"
                  id="img"
                  name="img"
                />
                <label class="custom-file-label" for="img">{{category.img}}</label>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-success">Edit</button>
        </div>
      </form>
    </div>
  </div>
</div>