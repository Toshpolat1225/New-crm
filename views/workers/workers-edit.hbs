


          <div class="card card-primary">

          <div class="card-body">
            
            <form action="/workers/edit" class="d-flex" method="post" enctype="multipart/form-data">
            
                <div class="col-md-6">

              <div class="form-group">
                <label for="fullname">Name of worker</label>
                <input type="text" id="fullname" class="form-control" name="fullname" value="{{worker.fullname}}">
              </div>
               <div class="form-group">
                <label for="inputClientCompany">Job</label>
                <input type="text" id="inputClientCompany" class="form-control" name="job" value="{{worker.job}}">
              </div>
              <div class="form-group">
                <label for="inputDescription">About</label>
                <textarea id="inputDescription" class="form-control"  rows="4" name="about" style="resize: none;">{{worker.about}}</textarea>
              </div>
               <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" class="form-control" name="address" value="{{worker.address}}">
              </div>
               <div class="form-group">
                <label for="phone">Phone</label>
                <input type="number" id="phone" minlength="8" min="1" class="form-control" name="phone" value="{{worker.phone}}">
              </div>
               <div class="form-group">
                <label for="education">Education</label>
                <input type="text" id="education"  class="form-control" name="education" value="{{worker.education}}">
              </div>
          </div>

             <div class="col-md-6">
                <div class="form-group">
                <label for="skills">Skills</label>
                <input type="text" id="skills" class="form-control" name="skills" value="{{worker.skills}}">
              </div>
              <div class="form-group">
                <label for="notes">Notes</label>
                <textarea id="notes" class="form-control" rows="4" name="notes" style="resize: none;">{{worker.notes}}</textarea>
              </div>


              {{!--    avatar --}}
              
              <div class="form-group">
                      <div class="custom-file">
                          <label for="avatar">Avatar</label>
                        <input type="file" class="custom-file-input" id="avatar" value="{{worker.avatar}}" name="avatar">
                        <label class="custom-file-label" for="avatar">{{worker.avatar}}</label>
                      </div>
                    </div>

                    {{!-- /avatar --}}
              
              <div class="form-group">
                <label for="inputClientCompany">Telegram</label>
                <input type="text" id="inputClientCompany" class="form-control" value="{{worker.telegram}}" name="telegram">
              </div>
              
               <div class="form-group">
                  <label for="inputStatus">Status</label>
                  <select id="inputStatus" class="form-control custom-select" value="{{worker.status}}" name="status">
                      <option  value="Student" {{#if isStudent}} selected{{/if}}>Student</option>
                       <option value="Worker" {{#if isWorker}} selected{{/if}}>Worker</option>
                      <option value="Project manager" {{#if isManager}} selected{{/if}}>Project manager</option>
                   </select>
               </div>
                <input type="hidden"  class="form-control" value="{{worker.id}}" name="id">
                  <button class="btn btn-dark" type="submit">Add worker</button>
             </div>

             </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->